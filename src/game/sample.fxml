<BorderPane prefHeight="750.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.Controller">
   <center>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Canvas fx:id="canvas" height="680.0" layoutX="15.0" layoutY="14.0" width="680.0" />
         </children>
      </Pane>
   </center>
   <left>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Separator prefWidth="200.0" />
            <Label text="Player 1 (Red)" />
            <ComboBox fx:id="cb1" prefWidth="150.0" />
            <Label text="Player 2 (Green)" />
            <ComboBox fx:id="cb2" prefWidth="150.0" />
            <Label text="Player 3 (Yellow)" />
            <ComboBox fx:id="cb3" prefWidth="150.0" />
            <Label text="Player 4 (Blue)" />
            <ComboBox fx:id="cb4" prefWidth="150.0" />
            <Separator prefWidth="200.0" />
            <Label text="Turn: null" />
            <Label text="Current Roll: -1" />
            <Button mnemonicParsing="false" onAction="#diceRoll" prefHeight="25.0" prefWidth="73.0" text="Roll Dice" textAlignment="CENTER" />
            <Button fx:id="startButton" mnemonicParsing="false" text="Start Game" />
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="New Game" />
            <Separator prefWidth="200.0" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </left>
   <right>
      <VBox prefHeight="730.0" prefWidth="250.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="0.0" prefWidth="183.0" text="Ludo Chat">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <TextArea editable="false" prefHeight="342.0" prefWidth="250.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin></TextArea>
            <HBox alignment="TOP_CENTER" prefHeight="174.0" prefWidth="250.0" spacing="10.0">
               <children>
                  <TextField />
                  <Button mnemonicParsing="false" text="Send" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </right>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
